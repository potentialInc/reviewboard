{
  "version": "1.0",
  "description": "Agent registry for orchestration. Agents are selected by domain and role.",
  "agents": {
    "feature-builder": {
      "file": "agents/feature-builder.md",
      "model": "opus",
      "tier": "high",
      "domain": "development",
      "roles": [
        "implementer",
        "architect"
      ],
      "description": "Implement complete features from specs",
      "pipeline_phases": [
        "init",
        "types",
        "backend",
        "integrate"
      ],
      "input": {
        "prd_sections": [
          "1. Overview",
          "2. Terminology",
          "5. System Modules",
          "8. API Endpoints"
        ],
        "context_files": [
          "CLAUDE.md",
          "memory/MISTAKES.md"
        ]
      },
      "output": {
        "artifacts": [
          "src/types/",
          "src/service/",
          "src/runtime/",
          "src/config/"
        ],
        "completion_signal": "PHASE_COMPLETE: <phase-name>",
        "commit_format": "feat(<phase>): <description>"
      }
    },
    "bug-fixer": {
      "file": "agents/bug-fixer.md",
      "model": "sonnet",
      "tier": "medium",
      "domain": "debugging",
      "roles": [
        "debugger",
        "diagnostician"
      ],
      "description": "Diagnose root causes and fix bugs with minimal changes"
    },
    "test-writer": {
      "file": "agents/test-writer.md",
      "model": "sonnet",
      "tier": "medium",
      "domain": "qa",
      "roles": [
        "tester"
      ],
      "description": "Write comprehensive tests for existing code",
      "pipeline_phases": [
        "test",
        "qa"
      ],
      "input": {
        "prd_sections": [
          "10. Acceptance Criteria",
          "11. Non-Functional Requirements"
        ],
        "context_files": [
          "CLAUDE.md",
          "src/"
        ]
      },
      "output": {
        "artifacts": [
          "*.test.ts",
          "*.spec.ts",
          "e2e/",
          "__tests__/"
        ],
        "completion_signal": "PHASE_COMPLETE: test",
        "commit_format": "test(<scope>): <description>"
      }
    },
    "refactorer": {
      "file": "agents/refactorer.md",
      "model": "sonnet",
      "tier": "medium",
      "domain": "refactoring",
      "roles": [
        "refactorer",
        "optimizer"
      ],
      "description": "Improve code quality without changing behavior"
    },
    "reviewer": {
      "file": "agents/reviewer.md",
      "model": "opus",
      "tier": "high",
      "domain": "review",
      "roles": [
        "reviewer",
        "auditor"
      ],
      "description": "Review code for quality, security, and architecture compliance"
    },
    "devops-agent": {
      "file": "agents/devops-agent.md",
      "model": "sonnet",
      "tier": "medium",
      "domain": "infrastructure",
      "roles": [
        "devops",
        "deployer"
      ],
      "description": "Set up deployment pipelines, containerization, and cloud infrastructure",
      "pipeline_phases": [
        "deploy"
      ],
      "input": {
        "prd_sections": [
          "1. Overview",
          "11. Non-Functional Requirements"
        ],
        "context_files": [
          "CLAUDE.md",
          "harness.config.json"
        ]
      },
      "output": {
        "artifacts": [
          "Dockerfile",
          ".github/workflows/",
          ".env.example"
        ],
        "completion_signal": "PHASE_COMPLETE: deploy",
        "commit_format": "chore(deploy): <description>"
      }
    },
    "database-agent": {
      "file": "agents/database-agent.md",
      "model": "sonnet",
      "tier": "medium",
      "domain": "database",
      "roles": [
        "database-engineer",
        "schema-designer"
      ],
      "description": "Design schemas, generate migrations, and optimize data access",
      "pipeline_phases": [
        "database"
      ],
      "input": {
        "prd_sections": [
          "7. DB Schema",
          "8. API Endpoints"
        ],
        "context_files": [
          "CLAUDE.md",
          "src/types/"
        ]
      },
      "output": {
        "artifacts": [
          "migrations/",
          "prisma/schema.prisma OR db/schema.sql",
          "src/repo/"
        ],
        "completion_signal": "PHASE_COMPLETE: database",
        "commit_format": "feat(database): <description>"
      }
    },
    "security-agent": {
      "file": "agents/security-agent.md",
      "model": "sonnet",
      "tier": "medium",
      "domain": "security",
      "roles": [
        "security-auditor",
        "vulnerability-scanner"
      ],
      "description": "Scan for vulnerabilities, review auth flows, and harden application security"
    },
    "performance-agent": {
      "file": "agents/performance-agent.md",
      "model": "sonnet",
      "tier": "medium",
      "domain": "performance",
      "roles": [
        "performance-engineer",
        "optimizer"
      ],
      "description": "Analyze, benchmark, and optimize application performance"
    },
    "documentation-agent": {
      "file": "agents/documentation-agent.md",
      "model": "sonnet",
      "tier": "medium",
      "domain": "documentation",
      "roles": [
        "technical-writer",
        "documenter"
      ],
      "description": "Generate, update, and maintain project documentation"
    },
    "ui-builder": {
      "file": "agents/ui-builder.md",
      "model": "opus",
      "tier": "high",
      "domain": "ui",
      "roles": [
        "ui-implementer",
        "design-translator"
      ],
      "description": "Translate visual designs into production UI components",
      "pipeline_phases": [
        "frontend"
      ],
      "input": {
        "prd_sections": [
          "6. User Flows",
          "9. UI Specifications"
        ],
        "context_files": [
          "CLAUDE.md",
          "design/screens/",
          "design/mockups/",
          "src/types/"
        ],
        "design_assets": "run ./harness/design-detector.sh to find"
      },
      "output": {
        "artifacts": [
          "src/components/",
          "src/pages/ OR src/app/",
          "SCREEN_STATUS.md"
        ],
        "completion_signal": "PHASE_COMPLETE: frontend",
        "commit_format": "feat(frontend): <description>"
      }
    },
    "design-qa": {
      "file": "agents/design-qa.md",
      "model": "opus",
      "tier": "high",
      "domain": "qa",
      "roles": [
        "design-qa",
        "visual-tester"
      ],
      "description": "Compare UI implementation against design source for fidelity scoring",
      "pipeline_phases": [
        "qa"
      ],
      "input": {
        "prd_sections": [
          "9. UI Specifications"
        ],
        "context_files": [
          "CLAUDE.md",
          "design/",
          "SCREEN_STATUS.md",
          "src/components/"
        ]
      },
      "output": {
        "artifacts": [
          "SCREEN_STATUS.md (updated with fidelity scores)"
        ],
        "completion_signal": "PHASE_COMPLETE: qa",
        "commit_format": "test(design-qa): visual fidelity report"
      }
    }
  }
}
